<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plant_Monitor.Views.NotificationScheduleDetailPage"
             Title="{Binding Title}">

	<StackLayout Spacing="20" Padding="15">
		<Label Text="Plant Name:" FontSize="Medium" />
		<Label x:Name="PlantName" FontSize="Small"/>
		<Label Text="Light Level:" FontSize="Medium" />
		<Label x:Name="LightLevel" FontSize="Small"/>
		<Label Text="Soil Moisture Level:" FontSize="Medium" />
		<Label x:Name="MoistureLevel" FontSize="Small"/>
		<Label Text="Current Schedule:" FontSize="Medium" />
		<Label x:Name="ScheduleInfo" FontSize="Small"/>
		<Button x:Name="ScheduleClicked" Pressed="Schedule_Clicked"/>
	</StackLayout>

</ContentPage>